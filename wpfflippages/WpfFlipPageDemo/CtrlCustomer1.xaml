<UserControl x:Class="WpfFlipPageDemo.CtrlCustomer1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Background="LightGray">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Action" />
                <Separator />
                <MenuItem Header="Quit" />
            </MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top">
            <Button ToolTip="Click me !">Action</Button>
        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom">
            <ProgressBar Minimum="0" Maximum="100" Value="40" Width="100" Height="20"/>
            <Slider Width="100" />
        </StatusBar>
        <TabControl DockPanel.Dock="Top" Height="100">
            <TabItem Header="Page1">
                <RichTextBox />
            </TabItem>
        </TabControl>
        <TreeView>
            <TreeViewItem Header="Root">
                <TreeViewItem Header="Child1">
                    <TreeViewItem Header="Child11" />
                    <TreeViewItem Header="Child12" />
                </TreeViewItem>
                <TreeViewItem Header="Child2" />
            </TreeViewItem>
        </TreeView>
    </DockPanel>
</UserControl>
